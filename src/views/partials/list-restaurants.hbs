{{#each restaurants}}
  <div class="card w-72 bg-base-100 shadow-xl p-10 m-2">
    <div class="box box-link-hover-shadow">
        <h2 class="text-2xl font-bold">
        {{name}}
        </h2>
        <span class="badge my-2">{{category}}</span>
        <span class="badge badge-primary my-2">{{cuisine}}</span>
        <p>
        {{description}}
        </p>
    </div>
  </div>
{{/each}}